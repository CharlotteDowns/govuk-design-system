{% extends "example-wrappers/full-page.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <div class="govuk-notification-banner" aria-labelledby="notification-banner-title" role="region">
        <h2 class="govuk-notification-banner__title" id="notification-banner-title">
          We're currently experiencing delays
        </h2>
        <div class="govuk-notification-banner__body">
          <p>
            Due to the impacts of COVID-19, applications will take longer to process than usual. Please apply at another time if you don't need a passport urgently.
          </p>
        </div>
      </div>

      <h1 class="govuk-heading-l">Passport details</h1>

      <form action="/form-handler" method="post" novalidate>

        {{ govukInput({
          label: {
            text: "Passport number",
            classes: "govuk-label--m"
          },
          hint: {
            text: "For example, 502135326"
          },
          classes: "govuk-input--width-10",
          id: "passport-number",
          name: "passport-number"
        }) }}

        {{ govukDateInput({
          id: "expiry",
          namePrefix: "expiry",
          fieldset: {
            legend: {
              text: "Expiry date",
              classes: "govuk-fieldset__legend--m"
            }
          },
          hint: {
            text: "For example, 31 3 1980"
          }
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>
    </div>
  </div>
{% endblock %}
